[Service]
Environment="ETCD_NAME={{ ansible_hostname }}"
Environment="ETCD_DISCOVERY={{ etcd_discovery_url }}"
Environment="ETCD_ADVERTISE_CLIENT_URLS=http://{{ ansible_eth0.ipv4.address }}:2379"
Environment="ETCD_INITIAL_ADVERTISE_PEER_URLS=http://{{ ansible_eth1.ipv4.address }}:2380"
Environment="ETCD_LISTEN_CLIENT_URLS=http://0.0.0.0:2379,http://0.0.0.0:4001"
Environment="ETCD_LISTEN_PEER_URLS=http://{{ ansible_eth1.ipv4.address }}:2380,http://{{ ansible_eth1.ipv4.address }}:7001"
